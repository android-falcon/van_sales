<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="900dp"
    android:layout_height="400dp"
    android:minWidth="900dp"
    android:minHeight="400dp"
    android:layoutDirection="locale"
    android:id="@+id/add_item"
    android:background="@color/layer7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/layer6"

        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/searchBarcode"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:src="@drawable/search_btn"
            android:layout_weight="1"/>



        <EditText
            android:id="@+id/barcode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            android:lines="1"
            android:layout_marginRight="40dp"
            android:layout_weight="3"
            android:background="@drawable/back_border_edit"
            android:gravity="center"

            android:padding="3dp" />
        <TextView
            android:id="@+id/clearBarcode"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:drawableRight="@drawable/ic_clear_black_24dp"
            android:textColor="@color/colorblue_dark"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/barcode"
            android:textColor="@color/colorblue_dark"
            android:textSize="18sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        >
        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:fontFamily="cursive"
            android:text="@string/app_add_items"
            android:textColor="@color/text_view_color"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/category"
                android:textColor="@color/colorblue_dark"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/cat"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorblue_dark"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/kind_item" />

            <Spinner
                android:id="@+id/spinner_kind_item"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/back_border_edit"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorblue_dark"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/item_name" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/mSearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"

                app:defaultQueryHint="Search.."
                />
        </LinearLayout>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/background_container"
        android:padding="5dp"
        android:layout_weight="3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>
    <ListView
        android:id="@+id/itemsListView"
        android:layout_marginHorizontal="5dp"
        android:background="@color/white"
        android:padding="2dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:orientation="horizontal"

        />
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="4"
        android:visibility="gone"
        android:text="Not Found" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/done"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/done_button"
            android:gravity="center"
            android:text="@string/app_done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/cancel_button"
            android:gravity="center"
            android:text="@string/app_cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>