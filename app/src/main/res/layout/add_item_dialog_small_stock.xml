<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearAddItem"
    android:layout_width="320dp"
    android:layout_height="250dp"
    android:background="@color/layer7"
    android:layoutDirection="locale"
    android:minWidth="220dp"
    android:minHeight="250dp"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:layout_margin="5dp"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/item_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="000"
            android:textColor="@color/radio_group"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="000"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"

            android:background="@color/colorblue1"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="test"
            android:textColor="@color/colorblue_dark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_view_color"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="5.3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/app_unit"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/unit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="9dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/textQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"

            android:text="@string/weight"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/unitQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_border_edit"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="12sp"

            android:imeOptions="actionNext"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearWeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="5.3"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/textview_wieght"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/unit_qty"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/unitWeight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:imeOptions="actionNext"
            android:background="@drawable/back_border_edit"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <CheckBox
            android:id="@+id/use_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12sp"
            android:checked="true"

            android:gravity="center"
            android:text="@string/use_weight"
            android:textColor="@color/text_view_color" />
        <CheckBox
            android:id="@+id/use_OneUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:checked="false"
            android:visibility="gone"

            android:gravity="center"
            android:text="@string/oneUnit"
            android:textColor="@color/text_view_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/layer3"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="5.3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/pricee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/app_price"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linear_bonus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/bonuss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/app_bonus"
                android:textColor="@color/text_view_color"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/bonus"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@drawable/back_border_edit"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discount_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="5.3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:visibility="gone">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/app_disc"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/discTypeRadioGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/discValueRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:text="@string/app_disc_type1"
                android:textColor="@color/text_view_color"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/discPercRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:layout_marginLeft="7dp"
                android:text="@string/app_disc_type2"
                android:textColor="@color/text_view_color"
                android:textSize="12sp" />


        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/layer3"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discribtionItem_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="5.3"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/remark"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/item_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"

            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/serialNo_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/SerialNo"
            android:textColor="@color/text_view_color"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/Serial_No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:inputType="text"
            android:lines="1"

            android:textSize="12sp" />

        <ImageView
            android:id="@+id/serialScan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/search_btn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="5"
        android:orientation="horizontal"
        android:padding="2dp"

        >

        <Button
            android:id="@+id/addToList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/done_button"
            android:text="@string/save"
            android:textColor="@color/layer7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1.5"

            android:background="@color/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancelAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer7"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>