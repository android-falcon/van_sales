<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@color/layer7"
    android:id="@+id/mainLineardialog"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorblue_dark"

            android:textSize="16sp"
            android:layout_margin="5dp"
            android:text="@string/quantity" />

        <EditText
            android:id="@+id/editText1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/back_border_edit"
            android:ems="10"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/pricee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorblue_dark"

            android:textSize="16sp"
            android:layout_margin="5dp"
            android:text="@string/app_price"
        />

        <EditText
            android:id="@+id/price_update"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/back_border_edit"
            android:ems="10"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp"

            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/discount_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
      >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorblue_dark"

            android:textSize="16sp"
            android:layout_margin="5dp"

            android:text="@string/app_disc"
           />

        <EditText
            android:id="@+id/discount_update"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/back_border_edit"
            android:ems="10"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp"

            />

        <RadioGroup
            android:id="@+id/discTypeRadioGroup_up"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/discValueRadioButton_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:text="@string/app_disc_type1"
                android:textColor="@color/text_view_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/discPercRadioButton_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:text="@string/app_disc_type2"
                android:textColor="@color/text_view_color"
                android:textSize="14sp" />


        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:imeOptions="actionDone"
            android:background="@drawable/done_button"
            android:textColor="@color/layer5"
            android:text="@string/app_done"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/cancel_button"
            android:textColor="@color/layer5"
            android:text="@string/app_cancel"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>