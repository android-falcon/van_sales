<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer7"
    android:layoutDirection="locale"
    android:id="@+id/linearCompany"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/logo"
            android:gravity="center_vertical"

            android:textColor="@color/text_view_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"


            android:background="@drawable/ic_cloud_upload_black_24dp"

            />
        <ImageView
            android:id="@+id/logo_fal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"


            android:background="@drawable/logo_falcons"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/logo"
            android:visibility="gone"
            android:textColor="@color/text_view_color"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/savecompanyLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:drawableEnd="@drawable/ic_add_location_black_24dp"

            android:text="@string/saveLocation"
            android:drawableRight="@drawable/ic_add_location_black_24dp" />

    </TableRow>
    <LinearLayout
        android:id="@+id/row11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/action_company_info"
            android:textStyle="bold"
            android:textColor="@color/colorblue_dark"
            android:textSize="16sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0.9"
        android:padding="5dp"


        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/company_name"
                android:textColor="@color/text_view_color"



                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/com_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/back_border_edit"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/text_view_color"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/salesman_name"
                android:textColor="@color/text_view_color"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/salesman_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/back_border_edit"

                android:textSize="14sp"
                android:text=""
                android:textColor="@color/text_view_color"
                />

        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/carNo"
                android:textColor="@color/text_view_color"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/salesman_car"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/back_border_edit"

                android:textSize="14sp"
                android:text=""
                android:textColor="@color/text_view_color"
                />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/national_id"
                android:textColor="@color/text_view_color"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/salesman_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:background="@drawable/back_border_edit"

                android:textSize="14sp"
                android:text=""
                android:textColor="@color/text_view_color"
                />

    </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/company_tel"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/com_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="13sp"
                android:gravity="start"
                android:layout_marginEnd="5dp"
                android:background="@drawable/back_border_edit"
                android:textColor="@color/text_view_color"
                android:layout_marginRight="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:text="@string/tax_no"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tax_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/back_border_edit"
                android:inputType="number"

                android:textColor="@color/text_view_color" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"

                android:text="@string/invoice_note"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/back_border_edit"
                android:padding="5dp"
                android:textColor="@color/text_view_color" />

        </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/note_position"

        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                 android:paddingTop="3dp"
                android:text="@string/noteposition"
                android:textColor="@color/text_view_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >

                <RadioButton
                    android:id="@+id/radioTop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"

                    android:checked="true"
                    android:text="@string/top"
                    android:textSize="14dp"
                    />

                <RadioButton
                    android:id="@+id/radioBottom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/Bottom"
                    android:textSize="14dp" />
            </RadioGroup>
       </TableRow>



    </TableLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_columnSpan="2"
        android:layout_margin="7dp"
        android:padding="3dp"

        android:orientation="horizontal">
        <Button
            android:id="@+id/ca01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1.5"
            android:background="@color/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold" />
        <Button
            android:id="@+id/okBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:background="@drawable/done_button"
            android:text="@string/save"
            android:textColor="@color/layer7"
            android:textStyle="bold" />
        <Button
            android:id="@+id/o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/done_button"
            android:text="@string/save"
            android:textColor="@color/layer5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer7"
            android:textStyle="bold" />
        <Button
            android:id="@+id/ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1.5"
            android:background="@color/cancel_button"
            android:text="@string/app_cancel"
            android:textColor="@color/layer5"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
