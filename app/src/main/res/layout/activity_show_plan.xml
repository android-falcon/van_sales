<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearPlan"
    tools:context=".ShowPlan">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="3"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
android:textStyle="bold"

            android:gravity="center_vertical"
            android:text="@string/sale_man_number"
            android:textColor="@color/text_view_color"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/sales_man_name1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/back_border_edit"
            android:textColor="@color/done_button"
            android:textSize="14sp"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1.3"
            android:padding="3dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/date"

            android:textColor="@color/text_view_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:background="@drawable/back_border_edit"
            android:textColor="@color/add_button"
            android:textSize="12sp"
            android:inputType="date"
            android:focusable="false"/>
        <Spinner
            android:id="@+id/mtrl_calendar_days_of_week"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:entries="@array/DaysOfWeek"

            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".9"
        android:padding="3dp"

        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/plantype"

            android:textColor="@color/text_view_color"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/plantype"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/back_border_edit"
            android:textColor="@color/done_button"
            android:textSize="14sp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:layout_height="match_parent">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/TYPEPOFPLAN1"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/main_blue_stroke_color"
android:textSize="11sp"
                android:button="@drawable/radiobuttonstyle"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:text="@string/TYPEPOFPLAN1"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/TYPEPOFPLAN2"
                android:layout_weight="1"
                android:button="@drawable/radiobuttonstyle"
                android:outlineAmbientShadowColor="@color/main_blue_stroke_color"
                android:textSize="11sp"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:text="@string/TYPEPOFPLAN2"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bySaleMan"
                android:layout_weight="1"
                android:button="@drawable/radiobuttonstyle"
                android:outlineAmbientShadowColor="@color/main_blue_stroke_color"
                android:textSize="11sp"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:text="@string/bySaleMan"
                />

        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="3dp"
        android:id="@+id/showlocation_lin"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/showlocation"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/showlocation"
            android:textStyle="bold"
            android:textColor="@color/red_background"

            android:textSize="20sp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_weight="2"
            android:visibility="invisible"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/back_border_edit"
            android:textColor="@color/done_button"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">
    <TableRow
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/colorblue_dark"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/order"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="@string/cust_name"
                            android:textColor="@color/white"
                            android:textStyle="bold" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/customers_locations"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </TableRow>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/planRec"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>