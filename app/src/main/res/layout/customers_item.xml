<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layer2"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:background="@color/layer3"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"

        >

        <!--        -->
        <TextView
            android:id="@+id/custAccTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="text"
            android:lines="1"
            android:text="@string/app_cust_no"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/cust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/ic_person_black_24dp"
            android:text="@string/app_cust_no"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/custNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="@string/cust_name"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/showloction"
            android:background="@drawable/ic_add_location_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="" />

    </LinearLayout>


</LinearLayout>