<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dr7.salesmanmanager.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_weight="7">
        <TextView
            android:id="@+id/masterControlLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="bottom|center"
            android:layout_margin="5dp"
android:visibility="gone"
            android:textColor="@color/colorblue_dark"
            android:text="0"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif"
            />
        <TextView
            android:id="@+id/notExportedTextView"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/pendingInvoice"
            android:gravity="center"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawableStart="@drawable/ic_info_black_24dp"

            android:textColor="@color/colorblue_dark"

            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif"
            />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"



        android:gravity="bottom|center"
        android:layout_margin="5dp"

        android:textColor="@color/colorblue_dark"
