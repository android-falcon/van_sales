<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:id="@+id/tab"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/ittem_largeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="right"

            android:textColor="@color/add_button"

            android:textDirection="ltr"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView172"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اجمالي الكمية  : "
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المجموع :"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2011"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الخصم :"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الضريبة : "
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الصافي : "
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ammont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/add_button"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/notelast2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"

        android:text="استلمت البضاعة كاملة و بحالة جيدة وخالية من اية عيوب "
        android:textColor="@color/add_button"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notelast3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:text=" واتعهد بدفع قيمة هذه الفاتورة . "
        android:textColor="@color/add_button"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/sing"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView68"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="المستلم : "
            android:textColor="@color/add_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="___________"
            android:textColor="@color/add_button"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="التوقيع :"
            android:textColor="@color/add_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="100dp"

            android:layout_height="match_parent"
            android:text="__________"
            android:textColor="@color/add_button"
            android:textSize="18sp" />
    </TableRow>
</LinearLayout>