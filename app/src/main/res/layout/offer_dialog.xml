<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:minWidth="400dp"
    android:minHeight="400dp"
    android:id="@+id/mainLinear"
    android:layoutDirection="locale"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/offer_dialog"

        android:textColor="@color/cancel_button"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/text_view_color"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/offerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/promo_type"
            android:textColor="@color/text_view_color"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBunos"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/linearWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/bonusItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bonus_item_qty"
            android:textColor="@color/text_view_color"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearWeight2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/bonusItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bonus_item_name"
            android:textColor="@color/text_view_color"
            android:textSize="17sp" />

    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/discount_value"
            android:textColor="@color/text_view_color"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/layer3"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:text="@string/from_date"
            android:textColor="@color/text_view_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

        
            android:layout_margin="5dp"
            android:text="@string/to_date"
            android:textColor="@color/text_view_color"
            android:textSize="17sp" />


    </LinearLayout>

    <Button
        android:id="@+id/ok"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/colorblue1"
        android:text="@string/app_ok"
        android:textColor="@color/layer5"
        android:textStyle="bold" />

</LinearLayout>