<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/layer7"
    android:orientation="vertical"
    android:id="@+id/mainLinear"
    android:layoutDirection="locale"
    android:padding="5dp"
    tools:context="com.dr7.salesmanmanager.ReceiptVoucher">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/row35"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/back_border_edit"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/voucherNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/voucher_number"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="@dimen/content" />
                    <TextView
                        android:id="@+id/clearData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/voucher_number"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="@dimen/content" />

                    <TextView
                        android:id="@+id/voucherNumberTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_view_color"
                        android:textSize="@dimen/content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/row351"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/back_border_edit"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/remark"
                        android:layout_margin="2dp"
                        android:textColor="@color/colorblue_dark"
                        android:textSize="@dimen/content" />

                    <EditText
                        android:id="@+id/remarkEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:imeOptions="flagNavigateNext"
                        android:textColor="@color/text_view_color"
                        android:textSize="@dimen/content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/newImgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:background="@drawable/new_inv" />

                <!--        <ImageButton-->
                <!--            android:id="@+id/saveInvoiceData"-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_marginRight="10dp"-->
                <!--            android:visibility="gone"-->
                <!--            android:background="@drawable/save_btn" />-->

                <ImageButton
                    android:id="@+id/addItemImgButton"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@drawable/ic_playlist_add_black_24dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.9"

                android:background="@color/colorblue_dark"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingBottom="1dp">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/app_item_no"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/app_desc"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/app_qty"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/row7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:layout_gravity="fill"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/itemsListViewFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="2.7"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:paddingRight="10dp"
                android:paddingBottom="1dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="left"
                    android:text="@string/total_qty"
                    android:textColor="@color/text_view_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="left"
                    android:text="@string/app_zero"
                    android:textColor="@color/second_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveInvoiceData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_normalColor="@color/colorblue1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:bmb_draggable="true"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:borderWidth="0dp"
            android:tooltipText="@string/save"


            android:background="@color/white"
            app:backgroundTint="@color/white"
            android:outlineSpotShadowColor="@color/colorblue1"
            android:outlineAmbientShadowColor="@color/colorblue1"

            android:backgroundTint="@color/white"
            android:src="@drawable/ic_done_black_24dp"

            android:visibility="visible"
            app:fabSize="auto" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deletAllData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_normalColor="@color/colorblue1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            app:bmb_draggable="true"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:elevation="10dp"
            app:borderWidth="0dp"
            android:tooltipText="@string/save"


            android:background="@color/white"
            app:backgroundTint="@color/white"
            android:outlineSpotShadowColor="@color/colorblue1"
            android:outlineAmbientShadowColor="@color/colorblue1"

            android:backgroundTint="@color/white"
            android:src="@drawable/ic_delete_forever_red_24dp"

            android:visibility="visible"
            app:fabSize="auto" />
    </RelativeLayout>

</LinearLayout>
