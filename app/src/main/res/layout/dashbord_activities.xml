                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/app_ret_inv"
                        android:textSize="18sp"
                        android:textColor="@color/colorblue_dark"
