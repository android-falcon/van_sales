        android:id="@+id/dashLayout"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="match_parent"
                android:layout_weight="8.8"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:text="@string/last_visit"

                    android:textColor="@color/colorblue_dark"
                    android:drawableStart="@drawable/ic_account_balance_black_b_24dp"
                    android:autoSizeTextType="uniform"
                    android:textSize="14sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="12sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_account_balance_black_b_24dp" />
                <TextView
                    android:id="@+id/lastVisit_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_border_edit"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_view_color"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/row221"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8.8"

                android:orientation="horizontal"
                android:padding="2dp"
                >

                <TextView
                    android:id="@+id/recivedAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/colorblue_dark"
                    android:autoSizeTextType="uniform"
                    android:textSize="14sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="12sp"
                    android:textStyle="bold"
                    android:text="@string/total_balance"
