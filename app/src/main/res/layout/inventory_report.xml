<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:background="@color/white"
    android:id="@+id/linearMain"
    android:orientation="vertical"
    android:padding="2dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"

                >

                <TextView
                    android:id="@+id/print"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="9"
                    android:background="@drawable/ic_print_black_24dp"
                    android:gravity="center"
                    android:padding="2dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/inventory_report"
                    android:textColor="@color/colorblue_dark"
                    android:autoSizeTextType="uniform"
                    android:textSize="16sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:padding="2dp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="@string/item_number"
                    android:textColor="@color/text_view_color"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/item_number_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:background="@drawable/back_border_edit"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/done_button"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginHorizontal="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="@string/item_name"
                    android:textColor="@color/text_view_color"
                    android:textSize="12sp" />
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/mSearch2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="2"
                    app:defaultQueryHint="Search.."
                    app:queryHint="Item name">

                </androidx.appcompat.widget.SearchView>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/row221"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:padding="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginHorizontal="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textColor="@color/text_view_color"
                    android:textSize="12sp" />
                <Spinner
                    android:id="@+id/cat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_weight="2"

                    android:gravity="center"
                    android:padding="3dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="@string/qty"
                    android:textColor="@color/text_view_color"
                    android:textSize="12sp" />
                <Spinner
                    android:id="@+id/quantityFilter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_weight="2"

                    android:gravity="center"
                    android:padding="3dp" />
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/mS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="3"
                    android:visibility="invisible"
                    app:defaultQueryHint="Search.."

                    app:queryHint="Item name"/>
            </LinearLayout>
            <Button
                android:id="@+id/preview_button_inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@color/red_background"

                android:text="@string/preview"
                android:textColor="@color/text_view_color" />

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView01"
                android:layout_width="270dp"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="550dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="550dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/colorblue_dark"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_itemName"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"

                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="@string/item_name"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView_itemNumber"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textColor="@color/white"

                            android:gravity="center"
                            android:text="@string/item_number"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView_itemQuantity"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textColor="@color/white"

                            android:gravity="center"
                            android:text="@string/unit_qty"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_margin="5dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_report"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/layer6"
                            android:orientation="vertical">

                        </androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:background="@color/layer3"
                            android:layout_alignBottom="@id/recyclerView_report"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="200dp"

                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@string/total_qty_inventory"

                                android:textColor="@color/done_button"/>
                            <TextView
                                android:id="@+id/total_qty_text"
                                android:layout_height="wrap_content"
                                android:layout_width="150dp"

                                android:textStyle="bold"
                                android:gravity="center"

                                android:textColor="@color/add_button"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_normalColor="@color/colorblue1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:bmb_draggable="true"
            />
    </RelativeLayout>

    <!--</ScrollView>-->


</LinearLayout>